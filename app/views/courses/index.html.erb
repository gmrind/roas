<h2>Listing Courses</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= link_to 'Show', course, class: "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_course_path(course), class: "btn btn-success btn-sm" %>
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' },
                                                                class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-default" %>
