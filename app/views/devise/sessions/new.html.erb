<div class="row login-penal">
  <div class="col-xs-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><span class="glyphicon glyphicon-user"></span> Log in</h3>
      </div>
      <div class="panel-body">
        <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %><br>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Pasword" %>
        <br>
          <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end -%>
        <br><br>
            <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
